{
  "name": "floncss",
  "version": "1.0.0",
  "description": "ハイブリッドCSSフレームワーク - 最小限のutility-first CSSとITCSSベースのstyle設計",
  "main": "core/index.css",
  "exports": {
    ".": "./core/index.css",
    "./core": "./core/index.css",
    "./core.css": "./core/index.css",
    "./core/*": "./core/*",
    "./generic": "./core/generic/index.css",
    "./base": "./core/base/index.css",
    "./trumps": "./core/trumps/index.css",
    "./trumps/*": "./core/trumps/*.css",
    "./templates/*": "./templates/*"
  },
  "bin": {
    "floncss": "./cli.js"
  },
  "files": [
    "core/",
    "templates/",
    "cli.js",
    "README.md"
  ],
  "scripts": {
    "build": "echo 'No build needed - source files are distributed directly'",
    "prepublishOnly": "echo 'Publishing source files'"
  },
  "keywords": [
    "css",
    "framework",
    "itcss",
    "utility-first",
    "postcss",
    "design-system"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "peerDependencies": {
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-mixins": "^11.0.3",
    "postcss-preset-env": "^10.1.5"
  },
  "devDependencies": {
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-mixins": "^11.0.3",
    "postcss-preset-env": "^10.1.5"
  }
}
